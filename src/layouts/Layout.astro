---
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Social from '../components/Social.astro';
import SkeletonSocial from '../components/SkeletonSocial.astro';
import { fade } from 'astro:transitions';

import type { LayoutProps } from '../types/layout.ts';

export const prerender = true;

const { title, description, image } = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="es">
  <BaseHead {title} {description} image={image} />
  <body transition:animate={fade({ duration: '1s' })}>
    <slot />
    <div class="mt-12">
      <Social server:defer>
        <SkeletonSocial slot="fallback" iconCount={4} />
      </Social>
    </div>
    <Footer />
  </body>
</html>
